<!--activity_home.xml-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 검색바 -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="검색 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onSearchClick" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="검색바"
            android:paddingStart="8dp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mic"
            android:contentDescription="음성 검색 아이콘"
            android:paddingStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onVoiceSearchClick" />
    </LinearLayout>

    <!-- 차량 아이콘과 즐겨찾기 -->
    <LinearLayout
        android:id="@+id/favoritesRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/searchBar"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_car"
            android:contentDescription="차종 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onCarTypeClick" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기1"
            android:textSize="14sp"
            android:textColor="#000000"
            android:clickable="true"
            android:onClick="onBookmark1Click" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기2"
            android:textSize="14sp"
            android:textColor="#000000"
            android:clickable="true"
            android:onClick="onBookmark2Click" />
    </LinearLayout>

    <!-- 내비 카드 -->
    <LinearLayout
        android:id="@+id/navCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/navi_card_background"
        android:padding="16dp"
        android:layout_below="@id/favoritesRow"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onNavClick" />

    <!-- 지도 카드 -->
    <LinearLayout
        android:id="@+id/mapCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/map_card_background"
        android:padding="16dp"
        android:layout_below="@id/navCard"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onMapClick" />

    <!-- 즐겨찾기 및 저장소 버튼 -->
    <LinearLayout
        android:id="@+id/favoriteSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/mapCard"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_favorite"
                android:contentDescription="즐겨찾기 버튼"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onFavoriteClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_storage"
                android:contentDescription="저장소 버튼"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onStorageClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장소"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 카테고리 아이콘들 -->
    <LinearLayout
        android:id="@+id/categorySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/favoriteSection"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_convenience_store"
            android:contentDescription="편의점 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            android:onClick="onConvenienceClick" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gas_station"
            android:contentDescription="주유소 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            android:onClick="onGasStationClick" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_restroom"
            android:contentDescription="화장실 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            android:onClick="onRestroomClick" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_three_settings"
            android:contentDescription="설정 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            android:onClick="onSettingsClick" />
    </LinearLayout>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- 홈 아이콘 -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_home"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:contentDescription="홈 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onHomeIconClick" />

        <!-- 북마크 아이콘 -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_bookmark"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:contentDescription="북마크 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBookmarkIconClick" />

        <!-- 설정 아이콘 -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_settings"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:contentDescription="설정 아이콘"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBottomSettingsClick" />
    </LinearLayout>
</RelativeLayout>
